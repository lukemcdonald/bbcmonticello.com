{
  "name": "@bbcmonticello/site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "astro": "astro",
    "build": "run-p build:*",
    "build:astro": "astro build",
    "clean": "rm -rf .astro dist node_modules",
    "dev": "run-p dev:*",
    "dev:astro": "astro dev",
    "format": "prettier --write .",
    "format:check": "prettier . --check --ignore-unknown",
    "format:fix": "prettier . --write --ignore-unknown",
    "lint": "eslint ./src --report-unused-disable-directives",
    "lint:fix": "eslint ./src --fix --report-unused-disable-directives",
    "style": "npm run lint:fix && npm run format:fix",
    "preview": "netlify deploy --build --message \"preview $(git rev-parse --short HEAD)\"",
    "start": "$npm_execpath run dev",
    "typecheck": "tsc -b",
    "validate": "run-p lint typecheck"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.1.1",
    "@astrojs/netlify": "^6.5.6",
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^5.12.9",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "eslint": "^9.31.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
