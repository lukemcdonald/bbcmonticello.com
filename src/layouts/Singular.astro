---
import EntryTitle from '@/components/entry/EntryTitle.astro'
import Body from '@/components/layout/Body.astro'
import Content from '@/components/layout/Content.astro'
import Footer from '@/components/layout/Footer.astro'
import Head from '@/components/layout/Head.astro'
import Header from '@/components/layout/Header.astro'
import Html from '@/components/layout/Html.astro'
import Main from '@/components/layout/Main.astro'
import Prose from '@/components/Prose.astro'

export interface Props {
  content: {
    description: string
    title: string
  }
}

const {
  content: { description, title },
} = Astro.props

const breadcrumbs = [
  { href: '/', label: 'Home' },
  { href: Astro.url.pathname, label: title },
]
---

<Html>
  <Head
    title={title}
    description={description}
  />

  <Body>
    <Header breadcrumbs={breadcrumbs} />
    <Content>
      <Main>
        <article>
          <header>
            <EntryTitle>{title}</EntryTitle>
          </header>
        </article>
        <Prose class="mt-6">
          <slot />
        </Prose>
      </Main>
    </Content>
    <Footer />
  </Body>
</Html>
