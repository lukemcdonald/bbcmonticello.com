---
export interface Props {
  class?: string
  disabled?: boolean
  to?: string
}

const { class: className, to, ...props } = Astro.props
const styles = {
  base: 'button inline-flex items-center justify-center px-4 py-2 text-base rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 hover:no-underline font-sans',
  disabled: 'opacity-50 cursor-not-allowed',
}
---

{
  to ?
    <a
      class:list={[styles.base, className]}
      href={to}
      {...props}
    >
      <slot />
    </a>
  : <button
      class:list={[styles.base, className]}
      {...props}
    >
      <slot />
    </button>
}
