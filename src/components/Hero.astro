---
import { Image } from 'astro:assets'

export interface Props {
  image: string
  imageAlt?: string
}

const { image, imageAlt = '' } = Astro.props
---

<section
  id="hero"
  class="relative top-12 z-10 -mt-12 mb-12"
>
  <div class="relative z-10 px-6 xl:px-0 2xl:container 2xl:mx-auto">
    <figure class="flex items-center overflow-hidden rounded bg-gray-900 shadow-md">
      <Image
        alt={imageAlt}
        height={480}
        src={image}
        width={1280}
      />
    </figure>
  </div>
</section>
