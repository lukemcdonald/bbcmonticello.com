---
export interface Breadcrumb {
  href: string | URL
  label: string
}

export interface Props {
  links: Breadcrumb[]
}

const { links } = Astro.props
---

<section
  class="relative bg-secondary-200 py-4 font-sans text-xs uppercase tracking-widest text-secondary-800"
>
  <div class="flex gap-3 px-6 lg:container">
    {
      links.map((link: Breadcrumb, idx: number) => {
        const isLast = idx === links.length - 1
        return (
          <>
            {!isLast ? (
              <>
                <span>
                  <a href={link.href}>{link.label}</a>
                </span>
                <span class="sep">‚ü©</span>
              </>
            ) : (
              <span class="breadcrumb_last" aria-current="page">
                {link.label}
              </span>
            )}
          </>
        )
      })
    }
  </div>
</section>
