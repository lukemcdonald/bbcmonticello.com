---
import type { HTMLAttributes } from 'astro/types'

type WrapperTag = 'div' | 'section' | 'article' | 'main'

interface Props extends HTMLAttributes<WrapperTag> {
  as?: WrapperTag
  class?: string
}

const { as: Component = 'div', class: className, ...delegated } = Astro.props satisfies Props
---

<Component
  {...delegated}
  class:list={[
    'prose',
    'prose-a:hover:underline',
    'prose-a:no-underline',
    'prose-a:text-inherit',
    'prose-a:text-primary-500',
    'prose-body:text-gray-900',
    'prose-h1:text-gray-900',
    'prose-h2:text-gray-900',
    'prose-h3:text-gray-900',
    'prose-h4:text-gray-900',
    'prose-h5:text-gray-900',
    'prose-h6:text-gray-900',
    'prose-hr:border-gray-300',
    'prose-p:text-gray-700',
    'max-w-none',
    className,
  ]}
>
  <slot />
</Component>
