---
import Breadcrumbs, { type Breadcrumb } from '../Breadcrumbs.astro'
import SiteIdentity from '../SiteIdentity.astro'
import SiteNavigation from '../SiteNavigation.astro'

export interface Props {
  breadcrumbs?: Breadcrumb[]
}

const { breadcrumbs } = Astro.props
---

<a
  class="skip-link sr-only"
  href="#content"
  >Skip to content</a
>

<header
  id="masthead"
  class="relative z-50 bg-primary-500 text-white"
  role="banner"
>
  <SiteNavigation />
  <SiteIdentity />
  {breadcrumbs ? <Breadcrumbs links={breadcrumbs} /> : null}
  <slot />
</header>
